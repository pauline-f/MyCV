<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pauline.mycv.view.CVMenuActivity">

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Software developer"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pauline Feytel"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/photo"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/photo" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objective"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"
        android:onClick="displayObjective"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Experience"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Education"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skills"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Languages"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hobbies"
        android:background="@color/pinkLight"
        android:layout_marginTop="10dp"/>



</LinearLayout>
